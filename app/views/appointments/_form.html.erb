<div class="row">
  <div class="col-lg-8">
    <%= form_for @appointment, class: "form-horizontal" do |f| %>
    <% if @appointment.errors.any?%>
      <% @appointment.errors.full_messages.each do |error|%>
        <%= error.inspect%>
    <% end %>
    <% end %>
    <div class="container col-sm-12">
      <div class="form-group ">
        <h4>Datos de la cita</h4>
        <hr>
        <h5><%= f.label :"Paciente: ", class: "col-sm-7 control-label" %></h5>
        <%= f.collection_select(:patient_id, Appointment.last.patient.user.patients, :id, :full_name ,class: 'form-control') %>
      </div>
      <div class="form-group ">
        <h5><%= f.label :"Fecha y hora de inicio: ", class: "col-sm-7 control-label" %></h5>
        <%= f.date_field  :start_date %>
        <%= f.time_field  :start_date , :ignore_date => true%>

        <br>
      </div>
      <div class="form-group ">
        <h5><%= f.label :"Hora de fin: ", class: "col-sm-7 control-label" %></h5>
        <%= f.date_field  :end_date %>
        <%= f.time_field  :end_date , :ignore_date => true%>

        <br>
      </div>
      <div class="form-group ">
        <br>
        <h5 align="center"><%= f.label :"Observaciones adicionales: ", class: "col-sm-12 control-label" %></h5>
        <br>
        <hr>
        <%= f.text_area  :observation ,class: "form-control"%>
      </div>

    <div class="form-group col-lg-10 col-md-offset-11">
      <br>
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
</div>
