<div class="row">
  <div class="col-lg-8">
    <%= form_for @patient, class: "form-horizontal" do |f| %>
    <% if @patient.errors.any?%>
    <% @patient.errors.full_messages.each do |error|%>
    <% end %>
    <% end %>
    <div class="form-group">
      <%= f.label :"nombre*", class: "col-sm-2 control-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :"apellido_paterno", class: "col-sm-4 control-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :"apellido_materno*", class: "col-sm-4 control-label" %>
      <%= f.text_field  :maternal_surname, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :"fecha_de_nacimiento*", class: "col-sm-4 control-label" %>
      <%= f.date_field  :date_birth, class: "form-control " %>
    </div>

    <div class="form-group">
      <%= f.label :edad, class: "col-sm-4 control-label" %>
      <%= f.number_field  :age, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
